@page "/claims"

<MudText Typo="Typo.h4" Class="mb-8">User Claims</MudText>

<AuthorizeView>
    <Authorized>
        <MudTable Items="context.User.Claims" Hover="true">
            <HeaderContent>
                <MudTh>Type</MudTh>
                <MudTh>Value</MudTh>
            </HeaderContent>
            <RowTemplate Context="claim">
                <MudTd DataLabel="Type">@claim.Type</MudTd>
                <MudTd DataLabel="Value">@claim.Value</MudTd>
            </RowTemplate>
        </MudTable>
    </Authorized>
</AuthorizeView>